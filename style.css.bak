body {
    font-family: Arial, sans-serif;
    margin: 0;
    padding: 0;
    background-color: #f5f5f5;
}

.container {
    display: flex;
    max-width: 1000px;
    margin: 0 auto;
}

.randomizer {
    flex: 1;
    padding: 20px;
    background-color: #fff;
}

.recipe-input {
    flex: 1;
    padding: 20px;
    background-color: #fff;
}

h1, h2, h3 {
    text-align: center;
}

table {
    width: 100%;
    margin-bottom: 10px;
}

button {
    display: block;
    margin-top: 10px;
}